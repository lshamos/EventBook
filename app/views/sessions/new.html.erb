<div className="login">
  <Grid>
    <Row>
        <div class="col-md-6 col-md-offset-3">
          <h1 class="title">Log In</h1>
        <FormGroup>
        <%= form_for :login, {url: login_path} do |f| %>
        <div>
          <%= f.email_field :email, placeholder: "email" %>
          <%= f.password_field :password, placeholder: "password" %>
          <%= f.submit 'Log In' %>
        </div>
      </FormGroup>
        <% end %>
      </div>
    </Row>
  </Grid>
</div>
